{
  "name": "barber-backend",
  "version": "1.0.0",
  "description": "barber-backend with fastify",
  "main": "server.js",
  "type": "module",
  "author": "Titan Apriliyan Nadine Ananta",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node --enable-source-maps --optimize-for-size --max-old-space-size=2048 dist/server.js",
    "dev": "tsx watch src/server.ts",
    "migrate": "yarn kysely migrate:latest --verbose",
    "migrate:create": "yarn kysely migrate:make",
    "migrate:down": "yarn kysely migrate:down --verbose",
    "seed": "yarn kysely seed:run --verbose",
    "seed:create": "yarn kysely seed:make",
    "rollback": "yarn kysely --migrate:rollback --verbose",
    "db:prune": "yarn kysely migrate:rollback --all && yarn kysely --migrate:latest --verbose"
  },
  "license": "MIT",
  "dependencies": {
    "@types/pg": "^8.15.5",
    "fastify": "^5.6.1",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "kysely-ctl": "^0.19.0",
    "pino-pretty": "^13.1.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6"
  }
}
