{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test/**/*.ts"],
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2024",
    "module": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@plugins/*": ["plugins/*"],
      "@database/*": ["database/*"],
      "@config/*": ["config/*"],
      "@queue/*": ["queue/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
